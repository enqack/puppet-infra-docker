{
    "builders":[{
        "type": "docker",
        "image": "centos:centos6",
        "export_path": "puppetdb.tar",
        "run_command": ["-h=puppetdb.localdomain", "-d", "-i", "-t", "{{.Image}}", "/bin/bash"]
    }],
    "provisioners":[
        {
            "type": "shell",
            "script": "./puppet.sh"
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "manifests/puppetdb.pp",
            "module_paths": ["modules"],
            "prevent_sudo": true
        }
    ]
}
